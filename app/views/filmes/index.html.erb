 <title>Films</title>
<body style="background-image: url(<%= asset_path 'fond.jpg' %>);background-repeat:repeat;background-size: cover; " >
	<center class="banniere-info-g" style="	background-image: url('https://thumbs.dreamstime.com/t/fundo-ou-textura-cinzenta-da-parede-do-grunge-35766309.jpg');position: fixed; left:0; top:0; right: 0; z-index: 10 ">
		<span class="type">films</span>
		<div class="replique">
			<% if @repliques.count > 0 %>
		      <h1><%= @replique.corps %></h1>
			  <div style="margin-left: 12%"><%= @replique.source %></div>
			<% end %>
		</div>
		<span class="filtre-genre">
			<form id="form1" action='<%= filmes_path %>' accept-charset="UTF-8" method="get">
				<select name="genre" id="genre" class="form-control" tabindex="9" data-remote = "true" onchange="genreselect()")>
					<% if @gselect == 0 %>
						<option selected="selected"  value="0">All</option>
					<% else %>
						<option value="0">All</option>
					<% end %>
					<% @genres.each do |g|%>
						<% if @gselect == g.id %>
							<option selected="selected" value=<%= g.id %>><%= g.contenu %></option>
						<% else %>
							<option value=<%= g.id %>><%= g.contenu %></option>
						<% end %>
					<% end %>
				</select>
			</form>
		</span>
	</center>
	<div style="margin-bottom: 8%"></div>
	<% @films.each do |f| %>
		<a href=<%= filme_path(f.id) %> >
			<center class='card' style="background-color: <%= f.couleur%>">
				<h3 style ="min-height:70px"><% if f.titre? %><%= f.titre %><% else %>Undefined<% end %></h3>
				<div style="min-height: 155px;">
					<% if f.image? %><img src=<%= f.image_url(:mini) %> /><% else %><img width="100px" height="150px" src=<%= asset_path 'default-affiche-film.jpg' %>/><% end %>
				</div>
				<div style="min-height: 20px; display: inline-block;"><%= f.langue %></div>
			</center>
		</a>
	<% end %>
	<hr class="reflux"/>
	<center><a href=<%= new_filme_path %> class="btn btn-success" id="ancre">new</a></center>
	<br>
	<center><a href=<%= home_path %> class="btn">retour</a></center>
</body>

<script type="text/javascript">
function genreselect()
{
	 document.getElementById("form1").submit();
}
</script>